
public class Permutation {
	
	public static int[] temp;

	public static void main(String[] args) {
		System.out.println("순열입니다");
		
		temp = new int[3];
		permutation(7,3,0,0,new boolean[7]);
	}
	
	public static void permutation(int n, int r, int idx, int depth, boolean[] chk) {
		if(idx==r) {
			
			return;
		}
//		if(depth==n) return;
		for(int i=0; i<n; i++) {
			if(!chk[i]) {
				chk[i] = true;
				temp[idx] = i;
				permutation(n,r,idx+1,depth+1,chk);
				chk[i] = false;
				
			}
		}
	}

}
